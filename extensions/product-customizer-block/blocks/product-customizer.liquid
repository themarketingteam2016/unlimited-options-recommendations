  }
</style>

{% schema %}
{
  "name": "Product Customizer",
  "target": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_quantity",
      "label": "Show quantity selector",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "label": "Show SKU",
      "default": true
    }
  ]
}
{% endschema %}
