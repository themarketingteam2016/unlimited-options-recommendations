    gap: 8px;
  }

  .unlimited-qty-btn {
    width: 36px;
    height: 36px;
    border: 2px solid #c9cccf;
    border-radius: 6px;
    background: white;
    color: #202223;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .unlimited-qty-btn:hover {
    border-color: #008060;
    color: #008060;
  }

  .unlimited-qty-input {
    width: 60px;
    height: 36px;
    border: 2px solid #c9cccf;
    border-radius: 6px;
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    color: #202223;
  }

  .unlimited-qty-input:focus {
